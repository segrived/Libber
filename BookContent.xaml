<Window x:Name="BookContentWindow" x:Class="Libber.BookContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Table of Contents" Height="497" Width="518" MinHeight="400" MinWidth="450" Loaded="BookContentWindow_Loaded"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="ContentText" Margin="10,51,10,41" TextWrapping="Wrap" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="CloseWindowsBtn" Content="Close this window" Margin="10,0,10,10" Height="26" VerticalAlignment="Bottom" Click="CloseWindowsBtn_Click"/>
        <TextBlock x:Name="BookTitle" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36"/>

    </Grid>
</Window>
